    @*s-content
        ==================================================*@
    <section class="s-content">

        <div class="row entries-wrap wide">
            <div class="entries">
                @if (Model.Any())
                {
                    foreach (StuffModel entity in Model)
                    {
                        <article class="col-block">

                            <div class="item-entry" data-aos="zoom-in">
                                <div class="item-entry__thumb">
                                    <a href="#" class="item-entry__thumb-link">
                                        <img src="@entity.Image 2x"
                                             srcset="@entity.Image.ToString() 1x, @entity.Image.ToString() 2x" alt="">
                                    </a>
                                </div>

                                <div class="item-entry__text">
                                    <div class="item-entry__cat">
                                        <a href="#">@entity.Name</a>
                                    </div>

                                    <h1 class="item-entry__title"><a href="#">@entity.Subject</a></h1>

                                    <div class="item-entry__date">
                                        <a href="#">@entity.Data.ToString("dd MMMM")</a>
                                    </div>
                                </div>
                            </div> <!-- item-entry -->

                        </article> <!-- end article -->
                    }
                       
                    }
        </div> <!-- end entries-wrap -->

        <div class="row pagination-wrap">
            <div class="col-full">
                <nav class="pgn" data-aos="fade-up">
                    <ul>
                        <li><a class="pgn__prev" href="#0">Prev</a></li>
                        <li><span class="pgn__num current">1</span></li>
